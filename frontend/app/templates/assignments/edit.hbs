<h5>Edit assignment</h5>

<form id="updateassignment" {{action 'updateAssignment' on='submit'}}>
  {{#each flashes.queue as |flash|}}
    {{flash-message flash=flash messageStyle='foundation' class='radius'}}
  {{/each}}

  <label for="title">Title</label>
  {{input id='title' placeholder='Enter a title'
          value=assignment.title}}
  <label for="description">Description</label>
  {{textarea id='description' placeholder='Description' value=assignment.description}}
  {{input id='travel' type='checkbox' checked=assignment.travel}}
  <label for='travel'>Travel</label>
  <br>
  {{input id='driver_license' type='checkbox' checked=assignment.driver_license}}
  <label for='driver_license'>Driving license</label>
  <div class="row">
    <div class="small-12 columns">
      <label>Assignment type(s)</label>
      {{select-2
          content=types_select
          value=assignment.assignment_type_ids
          multiple=true
          optionValuePath="id"
          placeholder="What type of assignment is this?"
      }}
    </div>
    <div class="small-12 columns">
      <label>Reward(s)</label>
      {{select-2
          content=rewards_select
          placeholder="Reward?"
          value=assignment.assignment_reward_ids
          multiple=true
          optionValuePath="id"
          optionLabelPath="reward"
      }}
    </div>
  </div>
  <hr>
  <button id="cancel" class="pull-right secondary" {{action 'cancel'}}>Cancel</button>
  {{!--
  {{#link-to 'assignments.show' class="button pull-right secondary"}}Cancel{{/link-to}}
  --}}
  <button id="submit" type="submit" class="pull-right">Send</button>
</form>

<script type="text/javascript">
  $('#updateassignment').on("keyup keypress", function(e) {
    var code = e.keyCode || e.which; 
    if (code  == 13) {               
      e.preventDefault();
      return false;
    }
  });
</script>
