<div class="row" style="margin-top: 50px;">
  <div class="xlarge-3 xlarge-offset-1 large-3 small-3 columns roll_container">
    <div class="row">
      <div class="large-1 columns">
      </div>
      <div class="large-11 columns">
        <div class="roll-container">
          <ul class="roll">
            {{outlet 'leftside'}}
          </ul>
          <div class="slit up">
            <div class="roll-tools-left">
             <i class="fa fa-search"></i>
            </div>
            <div class="roll-tools-right">
             <i class="fa fa-camera"></i>
             <i class="fa fa-globe"></i>
             <i class="fa fa-money"></i>
             <i class="fa fa-gift"></i>
            </div>
          </div>
          <div class="slit down"></div>
        </div>
        {{#link-to 'requests.new' class="pull-right"}}
          {{fa-icon 'plus'}} Add a new request
        {{/link-to}}
      </div>
    </div>
  </div>
  <!--<div class="small-4 large-4 xlarge-4 columns content">-->
  <div class="small-6 large-6 xlarge-4 columns">
    &nbsp; 
    {{outlet}}
    &nbsp;
  </div>
  <!--<div class="small-4 xlarge-3 end large-4 columns roll_container">-->
  <div class="small-3 xlarge-3 end large-3 columns roll_container">
    <div class="row">
      <div class="large-11 columns">
        <div class="roll-container">
          <ul class="roll" id="jobs-container">
            {{outlet 'rightside'}}
          </ul>
          <div class="slit up">
            <div class="roll-tools-left">
             <i class="fa fa-search"></i>
            </div>
            <div class="roll-tools-right">
             <i class="fa fa-camera"></i>
             <i class="fa fa-globe"></i>
             <i class="fa fa-money"></i>
             <i class="fa fa-gift"></i>
            </div>
          </div>
          <div class="slit down"></div>
        </div>
        {{#link-to 'jobs.new'}}
          {{fa-icon 'plus'}} Add a new job
        {{/link-to}}
      </div>
      <div class="large-1 columns">
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('ul.roll').perfectScrollbar({
    suppressScrollX: true
  });

  {{!--
