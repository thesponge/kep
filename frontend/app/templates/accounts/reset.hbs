{{partial 'p-navbar'}}

  <div class="notifications-container">
      {{#each notification in notifications}}
          {{notification-message notification=notification}}
      {{/each}}
  </div>
<!--<div id="registerModal" class="reveal-modal" data-reveal>-->
  <div class="row">
    <div class="small-2 xlarge-3 columns">&nbsp;</div>
    <div class="small-8 xlarge-6 columns">
      <div class="row">
        <div class="small-8 xlarge-7 push-2 xlarge-push-3 columns">
          <form id="recover" {{action 'deviseSendReset' email password password_confirmation on='submit'}}>
            <fieldset>
              <legend>Password recovery</legend>
              <label for="email">Reenter your email for verification</label>
              {{input id='email' placeholder='Enter your current email' value=email}}
              <label for="password">Your new password</label>
              {{input id='password' type="password" placeholder='Enter your new password' value=password}}
              <label for="password_confirmation">Confirm your new password</label>
              {{input id='password_confirmation' type="password" placeholder='Confirm your new password' value=password_confirmation}}
              <button id="submit" type="submit">Submit</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <div class="small-2 xlarge-3 columns">&nbsp;</div>
  </div>
